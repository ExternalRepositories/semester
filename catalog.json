{
    "$schema": "http://json-schema.org/draft/2019-09/schema#",
    "type": "object",
    "required": [
        "version",
        "packages"
    ],
    "properties": {
        "version": {
            "type": "number"
        },
        "packages": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "depends": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "string"
                        }
                    },
                    "description": {
                        "type": "string"
                    },
                    "git": {
                        "type": "object",
                        "required": [
                            "ref",
                            "url"
                        ],
                        "properties": {
                            "auto-lib": {
                                "type": "string"
                            },
                            "ref": {
                                "type": "string"
                            },
                            "url": {
                                "type": "string"
                            },
                            "transform": {
                                "type": "array",
                                "items": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}